{
  "name": "naffles-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot service for Naffles platform social tasks and allowlist management",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:comprehensive": "node tests/comprehensive/testRunner.js",
    "test:comprehensive:coverage": "node tests/comprehensive/testRunner.js --coverage",
    "test:comprehensive:watch": "node tests/comprehensive/testRunner.js --watch",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "jest --selectProjects e2e",
    "test:security": "jest --selectProjects security",
    "test:performance": "jest --selectProjects performance",
    "test:regression": "jest --selectProjects regression",
    "test:ci": "node tests/comprehensive/testRunner.js --coverage --bail",
    "deploy": "node deploy.js deploy",
    "health": "node deploy.js health",
    "monitor": "node src/monitoring/dashboard.js",
    "register-commands": "node register-commands.js register",
    "register-commands-guild": "node register-commands.js register-guild",
    "clear-commands": "node register-commands.js clear",
    "list-commands": "node register-commands.js list",
    "lint": "eslint src/ tests/ --ignore-path .gitignore",
    "lint:fix": "eslint src/ tests/ --fix --ignore-path .gitignore",
    "db:migrate": "node src/cli/databaseManager.js migrate",
    "db:status": "node src/cli/databaseManager.js migration:status",
    "db:rollback": "node src/cli/databaseManager.js migration:rollback",
    "db:cleanup": "node src/cli/databaseManager.js cleanup",
    "db:health": "node src/cli/databaseManager.js health",
    "db:analytics": "node src/cli/databaseManager.js data:analytics",
    "db:summary": "node src/cli/databaseManager.js data:summary"
  },
  "bin": {
    "discord-db-manager": "./src/cli/databaseManager.js"
  },
  "keywords": [
    "discord",
    "bot",
    "naffles",
    "social-tasks",
    "allowlist",
    "web3"
  ],
  "author": "Naffles Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "commander": "^11.1.0",
    "crypto": "^1.0.1",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "node-cron": "^3.0.3",
    "redis": "^4.6.11",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
